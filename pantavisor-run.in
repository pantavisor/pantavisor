#!/bin/sh

set -x


mkdir -p /sys/fs/cgroup/pantavisor
for pid in $(cat /sys/fs/cgroup/cgroup.procs); do
    echo $pid > /sys/fs/cgroup/pantavisor/cgroup.procs 2>/dev/null || true
done

