#mount --make-shared @CMAKE_INSTALL_RUNSTATEDIR@/pv/volumes

mkdir -p /volumes
mount --bind @CMAKE_INSTALL_RUNSTATEDIR@/pv/volumes /volumes

mkdir -p /storage
mount --bind @PV_INSTALL_FULL_STORAGEDIR@ /storage

@CMAKE_INSTALL_FULL_BINDIR@/pantavisor $@

umount /storage
